<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_scheduleBox"
    android:paddingTop="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_color"
        android:background="#f00"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_planName"
        app:layout_constraintBottom_toBottomOf="@+id/textView_planTime"/>

    <TextView
        android:id="@+id/textView_planName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="@string/dummy_text"
        android:textSize="15sp"
        app:fontFamily="@font/roboto_thin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_color"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_planTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="19.05"
        app:fontFamily="@font/roboto_thin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_color"
        app:layout_constraintTop_toBottomOf="@+id/textView_planName" />

</android.support.constraint.ConstraintLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="PWTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">#ff0</item>
        <item name="colorControlNormal">#0f0</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="PWTheme.Light" parent="PWTheme">
        <item name="android:windowBackground">@color/colorBackgroundPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="PWTheme.Dark" parent="PWTheme">
        <item name="android:windowBackground">@color/colorBackgroundPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="PWTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginLeft">@dimen/addEvent_divider_horiMargin</item>
        <item name="android:layout_marginEnd">@dimen/addEvent_divider_horiMargin</item>
        <item name="android:layout_marginRight">@dimen/addEvent_divider_horiMargin</item>
        <item name="android:layout_marginStart">@dimen/addEvent_divider_horiMargin</item>
        <item name="android:layout_marginTop">@dimen/addEvent_block_botMargin</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/addEvent_divider_height</item>
        <item name="android:background">@color/colorBackgroundPrimaryDark</item>
    </style>

    <style name="calendar_eventBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="calendar_eventName" parent="calendar_eventBox">
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="calendar_eventTime" parent="calendar_eventBox">


    </style>

    <style name="counterdialogheader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="counterdialoglist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="counterdialogbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBackgroundPrimaryDark</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="counterdialogbutton.up">
        <item name="android:src">@drawable/ic_arrow_upward_gray_24dp</item>
    </style>

    <style name="counterdialogbutton.down">
        <item name="android:src">@drawable/ic_arrow_downward_gray_24dp</item>

    </style>


</resources>

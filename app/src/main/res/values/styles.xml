<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"/>

    <style name="PWTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="PWTheme.Light" parent="PWTheme">
        <item name="android:windowBackground">@color/colorBackgroundPrimary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="PWTheme.Dark" parent="PWTheme">
        <item name="android:windowBackground">@color/colorBackgroundPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="PWTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundPrimaryDark</item>
        <item name="android:textColor">@color/colorTextPrimaryDark</item>
        <item name="editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="windowActionBar">false</item>
    </style>



</resources>
